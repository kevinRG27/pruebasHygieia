{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "src",
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
